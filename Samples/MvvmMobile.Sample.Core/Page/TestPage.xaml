<?xml version="1.0" encoding="UTF-8"?>
<pageBase:PageBase
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:pageBase="clr-namespace:MvvmMobile.Sample.Core.Page;assembly=MvvmMobile.Sample.Core"
    xmlns:vm="clr-namespace:MvvmMobile.Sample.Core.ViewModel;assembly=MvvmMobile.Sample.Core"
    x:TypeArguments="vm:ITestViewModel"
    x:Class="MvvmMobile.Sample.Core.Page.TestPage">
	<pageBase:TestPage.Content>
        <StackLayout>
            <Label Text="{Binding Motorcycle.Brand}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="30" />
            <Button Text="Done" Command="{Binding SaveMotorcycleCommand}" />
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
        </StackLayout>

	</pageBase:TestPage.Content>
</pageBase:PageBase>